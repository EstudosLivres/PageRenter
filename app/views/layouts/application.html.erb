<!DOCTYPE html>
<html>
    <head>
      <meta charset='utf-8'>
      <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0, user-scalable=0" />

      <title>PageRenter</title>
      <link rel="stylesheet" href="/assets/style.css"/>

      <script src='/assets/modernizr.min.js'></script>

      <!-- jQuery -->
      <script src='/assets/jq/jq.min.js'></script>
      <!-- /jQuery -->

      <!-- Angular -->
      <script src="/assets/angular/angular.min.js"></script>
      <script src='/assets/angular/angular-touch.min.js'></script>
      <script src="/assets/angular/angular-sanitize.min.js"></script>
      <!-- /Angular -->

      <!-- Meus scripts -->
      <script src='/assets/app_initialize.js'></script>
      <!-- /Meus -->
      <%= csrf_meta_tags %>
    </head>
    <body>

        <!-- NavBar -->
        <div class="navbar navbar-custom navbar-static-top" role="navigation">
          <div class="container">
            <div class="navbar-header">
              <button class="navbar-toggle" data-target=".navbar-collapse" data-toggle="collapse" type="button">
                <span class="icon-bar"> <i class="fa-bars"></i> </span>
              </button>

              <span id='brand'> <span class="r_advertiser_brand">Page</span><span class="r_publisher_brand">Renter</span> </span>
            </div>
            <div class="collapse navbar-collapse">
              <ul class="nav navbar-nav navbar-right">
                <li class="dropdown">
                  <a class="dropdown-toggle r_publisher" data-toggle="dropdown" href="#"> <i class="fa fa-rocket"></i> Raylen Jorge <b class="caret"></b></a>
                  <ul class="dropdown-menu">
                    <li><a class="r_advertiser" href="/users/edit"> <i class="fa fa-bullhorn"></i> Create Company </a></li>
                    <li class="divider"></li>
                    <li><a data-method="delete" href="/users/sign_out" class="error_txt">Sair</a></li>
                  </ul>
                </li>
              </ul>
            </div>
          </div>
        </div>

        <div class="container box">
            <%= yield %>
        </div>

        <footer id="includes_js">
            <!-- Bootstrap -->
            <script src='/assets/bootstrap/bootstrap.min.js'></script>
            <!-- /Bootstrap -->
        </footer>
    </body>
</html>
