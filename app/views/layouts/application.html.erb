<!DOCTYPE html>
<html>
    <head>
      <meta charset='utf-8'>
      <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0, user-scalable=0" />
      <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">

      <title>PageRenter</title>
      <%= stylesheet_link_tag 'style' %>

      <%= javascript_include_tag 'application' %>
      <%= javascript_include_tag 'modernizr.min' %>

      <!-- jQuery -->
      <%= javascript_include_tag 'jq/jq.min' %>
      <!-- /jQuery -->

      <!-- Angular -->
      <%= javascript_include_tag 'angular/angular.min' %>
      <%= javascript_include_tag 'angular/angular-touch.min' %>
      <%= javascript_include_tag 'angular/angular-sanitize.min' %>
      <!-- /Angular -->

      <!-- Meus scripts -->
      <%= javascript_include_tag 'app_initialize' %>
      <!-- /Meus -->
      <%= csrf_meta_tags %>
    </head>
    <body class="r_<%=role_name%>">

        <!-- NavBar -->
        <div class="navbar navbar-custom navbar-fixed-top" role="navigation">
          <div class="container">
            <div class="navbar-header">
              <button class="navbar-toggle" data-target=".navbar-collapse" data-toggle="collapse" type="button">
                <span class="icon-bar"> <i class="fa-bars"></i> </span>
              </button>
              <ul id="mob_role_action" class="hidden-md visible-xs nav navbar-nav">
                <%
                   role_actions.each do |action|
                %>
                    <li>
                      <a class="r_<%= role_name %>" href="<%= action[:path] %>" data-toggle="<%= action[:toggle] %>" data-target="<%= action[:path] %>">
                        <% if action[:path] == '#invite' || action[:path] == '#recommend' %>
                            <span id="invitation_counter" class="badge alert-danger">0</span>
                        <% end %>
                        <i class="<%= action[:icon] %>"></i>
                        <span class="visible-lg">
                          <%= action[:name] %>
                        </span>
                      </a>
                    </li>
                <%
                   end
                %>
              </ul>

              <a href="/" class="brand"><span> <span class="r_advertiser_brand">Page</span><span class="r_publisher_brand">Renter</span> </span></a>
            </div>

            <ul id="role_action" class="hidden-xs nav navbar-nav">
              <%
                 role_actions.each do |action|
              %>
                  <li>
                    <a class="r_<%= role_name %>" href="<%= action[:path] %>" data-toggle="<%= action[:toggle] %>" data-target="<%= action[:path] %>">
                      <% if action[:path] == '#invite' || action[:path] == '#recommend' %>
                          <span id="invitation_counter" class="badge alert-danger">0</span>
                      <% end %>
                      <i class="<%= action[:icon] %>"></i>
                        <span class="visible-lg">
                          <%= action[:name] %>
                        </span>
                    </a>
                  </li>
              <%
                 end
              %>
            </ul>

            <div class="collapse navbar-collapse">
              <ul id="user_action" class="nav navbar-nav navbar-right">
                <li class="dropdown">
                  <a class="dropdown-toggle r_<%=role_name%>" data-toggle="dropdown" href="#">
                    <i class="fa <%=role_icon%>"></i>
                    <%= @current_user.get_default_profile.name %>
                    <b class="caret"></b>
                  </a>
                  <ul class="dropdown-menu">
                    <%
                        @current_user.profiles.each do |profile|
                    %>
                        <li>
                          <a class="r_<%=profile.role.name%>" href="/<%= profile.role.name.pluralize %>">
                            <i class="fa <%=role_icon(profile.role.name)%>"></i>
                            <%= profile.name %>
                          </a>
                        </li>
                    <%
                        end
                    %>
                    <li class="divider"></li>
                         <li><a class="r_publisher manage" href="/publishers/edit"> <i class="fa fa-rocket"></i> <i class="fa fa-gears"></i> <span> <%= t(:user_action)[:dropdown][:manage_pub] %> </span> </a></li>

                        <li><a class="r_advertiser manage" href="/advertisers/edit"> <i class="fa fa-bullhorn"></i> <i class="fa fa-gears"></i> <span> <%= t(:user_action)[:dropdown][:manage_adv] %> </span> </a></li>
                    <!-- Global Actions Divider -->
                    <li class="divider"></li>
                        <li><a data-method="delete" href="/users/sign_out" class="error_txt"> <i class="fa fa-power-off"></i> Sair</a></li>
                  </ul>
                </li>
              </ul>
            </div>
          </div>
        </div>

        <div class="container box">
            <header>
                <h1 class="r_<%=role_name%>"> <i class="fa <%=role_icon%>"></i> <%=role_name%> </h1>
            </header>

            <% unless flash[:notice].nil? %>
                <% if flash[:notice].is_a?(Hash) %>
                    <div class="alert alert-<%=flash[:notice][:type]%>">
                      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                      <strong><%= @current_user.first_name %>, <%= flash[:notice][:strong] %></strong>. <%=flash[:notice][:msg]%></i>
                    </div>
                <% end %>
            <% end -%>

            <%= yield %>
        </div>

        <%= render 'action_menu/invite' %>
        <%= render 'action_menu/recommend' %>
        <%= render 'action_menu/feedback' %>
        <%= render 'action_menu/add_session' %>

        <footer id="includes_js">
            <!-- Bootstrap -->
            <%= javascript_include_tag 'bootstrap/bootstrap.min' %>
            <!-- /Bootstrap -->
        </footer>
    </body>
</html>
