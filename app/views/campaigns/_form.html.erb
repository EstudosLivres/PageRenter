<%= form_for(@campaign) do |f| %>
    <% if @campaign.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(@campaign.errors.count, "error") %> prohibited this campaign from being saved:</h2>

            <ul>
                <% @campaign.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div class="form-group col-md-12">
        <div class="row">
            <div class="field form-group">
              <%= f.label :name %> (para seu controle interno) <span>máximo de caracteres: <strong>70</strong></span><br>
              <%= f.text_field :name, class: 'form-control', placeholder: 'Nome/Título da campanha' %>
            </div>
        </div>

        <div class="row">
            <div class="row">
                <div class="field form-group col-md-6">
                    <%= f.label :launch_date %> (data de início da campanha)
                    <%= f.text_field :launch_date, class: 'form-control', placeholder: 'Nome/Título da campanha', 'data-behaviour'=>'datepicker' %>
                </div>
                <div class="field form-group col-md-6">
                    <%= f.label :end_date %> (data de término da campanha)
                    <%= f.text_field :end_date, class: 'form-control', placeholder: 'Nome/Título da campanha', 'data-behaviour'=>'datepicker' %>
                </div>
            </div>
        </div>
    </div>

    <div class="actions">
        <%= f.submit :submit, class: "btn #{current_button}" %>
    </div>
<% end %>

<script type="text/javascript">
    $(document).ready(function(){
        $('[data-behaviour~="datepicker"]').datepicker({
            autoclose: true,
            format: 'dd/mm/yyyy',
            language: 'pt-BR',
            startDate: 'today'
        });
    })
</script>