<%= form_for(@campaign, :html=>{class: 'form-horizontal'}) do |f| %>
    <% if @campaign.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(@campaign.errors.count, "error") %> prohibited this campaign from being saved:</h2>

            <ul>
                <% @campaign.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div class="field form-group col-md-6">
        <%= f.label :name %> (para seu controle interno) <span>máximo de caracteres: <strong>50</strong></span><br>
        <%= f.text_field :name, class: 'form-control', placeholder: 'Nome/Título da campanha' %>
    </div>

    <div class="field form-group col-md-offset-2 col-md5">
      <label for="budget">Orçamento</label>
      <input id="budget" class="form-control" type="text" placeholder="Valor a ser depositado para a campanha" data-behaviour="datepicker"/>
    </div>

    <div class="actions">
    <%= f.submit :submit, class: "btn #{current_button}" %>
    </div>
<% end %>

<aside id="new_campaign_right" class="col-md-6">
  <p>Peça publicitária (Tamanho otimizado: 470 × 245)</p>
  <img id="new_campaign_image" class="col-md-6" />
</aside>

<script type="text/javascript">
    $(document).ready(function(){
        $('[data-behaviour~="datepicker"]').datepicker({
            autoclose: true,
            format: 'dd/mm/yyyy',
            language: 'pt-BR',
            startDate: 'today'
        });
    })
</script>