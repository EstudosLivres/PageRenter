    .row
      .field.form-group
        =f.label :name
        = f.text_field :name, class: 'form-control', placeholder: 'Nome/Título da campanha'
    .row
      .row
        .field.form-group.col-md-6
          = f.label :launch_date
          = f.text_field :launch_date, value:format_date(f.object.launch_date),  class: 'form-control', placeholder: 'Nome/Título da campanha', 'data-behaviour'=>'datepicker'
        .field.form-group.col-md-6
          = f.label :end_date
          = f.text_field :end_date, value:format_date(f.object.end_date), class: 'form-control', placeholder: 'Nome/Título da campanha', 'data-behaviour'=>'datepicker'


  .actions
    = f.submit :submit, class: "btn #{current_button} float_right"