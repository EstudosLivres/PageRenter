<h1>Listing budgets</h1>

<table>
  <thead>
    <tr>
      <th>Activated</th>
      <th>Value</th>
      <th>Close date</th>
      <th>Currency</th>
      <th>Campaign</th>
      <th>Recurrence period</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @budgets.each do |budget| %>
      <tr>
        <td><%= budget.activated %></td>
        <td><%= budget.value %></td>
        <td><%= budget.close_date %></td>
        <td><%= budget.currency %></td>
        <td><%= budget.campaign %></td>
        <td><%= budget.recurrence_period %></td>
        <td><%= link_to 'Show', budget %></td>
        <td><%= link_to 'Edit', edit_budget_path(budget) %></td>
        <td><%= link_to 'Destroy', budget, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

