= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = devise_error_messages!

  .field
    = f.email_field :username, class:'username_avatar', placeholder:t('devise.placeholders.username'), autofocus: true

  .field
    = f.email_field :email, class:'username_avatar', placeholder:t('devise.placeholders.email'), autofocus: true

  .field
    = f.password_field :password, placeholder: "Password min: #{@minimum_password_length} caracteres", autocomplete: "off"

  .field
    = f.password_field :password_confirmation, placeholder: 'Password Confirmation', autocomplete: "off"

  .actions
    = f.submit "Sign up", class:'btn btn-primary btn-block'

= render 'devise/shared/links'
