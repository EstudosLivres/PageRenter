.row
  #campaigns.col-md-12
    = render 'ads/pagerenter_ad'

    #campaigns_accordion.panel-group
      -@campaigns.each_with_index do |campaign, index|
        -@campaign = campaign
        .panel.panel-default
          .panel-heading
            h4.panel-title
              =render 'campaigns/campaign_actions'

              a data-toggle="collapse" data-parent="#accordion" href="#campaign_#{index}"
                img.campaign_brand src="#{@campaign.advertiser.avatar.url(:thumb)}"
                = @campaign.name
                -current_campaign_state = @campaign.current_state
                -unless current_campaign_state.nil?
                  span class="badge alert-#{current_campaign_state.msg}"
                    = current_campaign_state.name.upcase

          .panel-collapse.collapse id="campaign_#{index}"
            .panel-body
              | Saldo:
              | Criada em: <%= format_date(@campaign.created_at) %>
              | Launched for: <%= format_date(@campaign.launch_date) %>
              | End at: <%= format_date(@campaign.end_date) %>
